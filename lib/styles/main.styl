@import 'global'

// Portrait layout (default)
.app
  // color: blue
  ul
    padding-left 0
  li
    padding: 10px
    font-size 24px
    background rgba(0,0,0,0.1)
    border solid 1px rgba(0,0,0,0.4)
    list-style-type none
    margin: 10px 0

.reminder-item
  opacity: 0.8

  &:hover
    opacity: 1

  .icon-remove
    float: right
    cursor: pointer

.reminder-item-time
  margin-right: 10px
  opacity: 0.8
  font-size: 80%

