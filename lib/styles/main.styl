@import 'global'

// Portrait layout (default)
.app
  padding: 20px
  .form
    padding: 20px 0
    background: #F5F5F5
  input
    font-size: 20px
    border: 1px solid #CCC
    padding: 5px
  .label-input
    float: left
  button.submit
    float: right

.bootstrap-timepicker
  width: auto

.reminder-list
  margin-left: 0
  padding-left: 0

.reminder-item
  padding: 10px
  font-size 24px
  background rgba(0,0,0,0.1)
  border solid 1px rgba(0,0,0,0.4)
  list-style-type none
  margin: 10px 0
  opacity: 0.8

  &:hover
    opacity: 1

  .icon
    float: right
    cursor: pointer

.reminder-item-time
  margin-right: 10px
  opacity: 0.8
  font-size: 80%

